@page
@model OnDemandTutor.API.Pages.ClassPage.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Class";
}

<h2>Create Class</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Hiển thị tóm tắt lỗi -->

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Account ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateClass.AccountId" required />
            <span asp-validation-for="CreateClass.AccountId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Subject ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateClass.SubjectId" required />
            <span asp-validation-for="CreateClass.SubjectId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Start Day</label>
        <div class="col-md-8">
            <input type="date" class="form-control" asp-for="CreateClass.StartDay" required />
            <span asp-validation-for="CreateClass.StartDay" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">End Day</label>
        <div class="col-md-8">
            <input type="date" class="form-control" asp-for="CreateClass.EndDay" required />
            <span asp-validation-for="CreateClass.EndDay" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Amount of Slots</label>
        <div class="col-md-8">
            <input type="number" class="form-control" asp-for="CreateClass.AmountOfSlot" required />
            <span asp-validation-for="CreateClass.AmountOfSlot" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <a class="btn btn-outline-primary" asp-page="/ClassPage/Index">Cancel</a>
    </div>
</form>
