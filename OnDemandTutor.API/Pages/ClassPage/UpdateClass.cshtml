@page "{id}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OnDemandTutor.API.Pages.ClassPage.UpdateClassModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Class";
}
h2>@ViewData["Title"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ClassId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Account ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="ClassData.AccountId" readonly />
            <span asp-validation-for="ClassData.AccountId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Subject ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="ClassData.SubjectId" required />
            <span asp-validation-for="ClassData.SubjectId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Start Day</label>
        <div class="col-md-8">
            <input type="date" class="form-control" asp-for="ClassData.StartDay" required />
            <span asp-validation-for="ClassData.StartDay" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">End Day</label>
        <div class="col-md-8">
            <input type="date" class="form-control" asp-for="ClassData.EndDay" required />
            <span asp-validation-for="ClassData.EndDay" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Amount of Slots</label>
        <div class="col-md-8">
            <input type="number" class="form-control" asp-for="ClassData.AmountOfSlot" required />
            <span asp-validation-for="ClassData.AmountOfSlot" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="col-md-4 d-grid">
            <a class="btn btn-outline-primary" asp-page="/ClassPage/Index">Cancel</a>
        </div>
    </div>
</form>
