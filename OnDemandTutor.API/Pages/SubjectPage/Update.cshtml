@page "{id}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OnDemandTutor.API.Pages.SubjectPage.UpdateSubjectModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Subject";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SubjectId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Subject ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SubjectData.Id" readonly />
            <span asp-validation-for="SubjectData.Id" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Name</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SubjectData.Name" required />
            <span asp-validation-for="SubjectData.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Description</label>
        <div class="col-md-8">
            <textarea class="form-control" asp-for="SubjectData.Description" required></textarea>
            <span asp-validation-for="SubjectData.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Created By</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SubjectData.CreatedBy" required />
            <span asp-validation-for="SubjectData.CreatedBy" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="col-md-4 d-grid">
            <a class="btn btn-outline-primary" asp-page="/SubjectPage/Index">Cancel</a>
        </div>
    </div>
</form>