@page
@model OnDemandTutor.API.Pages.TutorPage.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Tutor Subject";
}

<h2>Create Tutor Subject</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">User ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateTutor.UserId" required />
            <span asp-validation-for="CreateTutor.UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Subject ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateTutor.SubjectId" required />
            <span asp-validation-for="CreateTutor.SubjectId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Bio</label>
        <div class="col-md-8">
            <textarea class="form-control" asp-for="CreateTutor.Bio" required></textarea>
            <span asp-validation-for="CreateTutor.Bio" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Rating</label>
        <div class="col-md-8">
            <input type="number" step="0.1" class="form-control" asp-for="CreateTutor.Rating" required />
            <span asp-validation-for="CreateTutor.Rating" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Experience</label>
        <div class="col-md-8">
            <input type="number" class="form-control" asp-for="CreateTutor.Experience" required />
            <span asp-validation-for="CreateTutor.Experience" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Hourly Rate</label>
        <div class="col-md-8">
            <input type="number" class="form-control" asp-for="CreateTutor.HourlyRate" required />
            <span asp-validation-for="CreateTutor.HourlyRate" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <a class="btn btn-outline-primary" asp-page="/TutorPage/Index">Cancel</a>
    </div>
</form>
