@page "{id}"
@model OnDemandTutor.API.Pages.SchedulePage.DeleteScheduleModel
@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="scheduleId">Schedule ID</label>
        <input type="text" class="form-control" id="scheduleId" name="scheduleId" value="@Model.ScheduleId" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="/SchedulePage/Index" class="btn btn-secondary">Back to Schedule List</a>
