@page
@model OnDemandTutor.API.Pages.Slots.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Slot";
}

<h2>Create Slot</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Hiển thị tóm tắt lỗi -->

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Class ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateSlot.ClassId" required />
            <span asp-validation-for="CreateSlot.ClassId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Day of Slot</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="CreateSlot.DayOfSlot" required />
            <span asp-validation-for="CreateSlot.DayOfSlot" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Start Time</label>
        <div class="col-md-8">
            <input type="time" class="form-control" asp-for="CreateSlot.StartTime" required />
            <span asp-validation-for="CreateSlot.StartTime" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">End Time</label>
        <div class="col-md-8">
            <input type="time" class="form-control" asp-for="CreateSlot.EndTime" required />
            <span asp-validation-for="CreateSlot.EndTime" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Price</label>
        <div class="col-md-8">
            <input type="number" class="form-control" asp-for="CreateSlot.Price" required />
            <span asp-validation-for="CreateSlot.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <a class="btn btn-outline-primary" asp-page="/Slots/Index">Cancel</a>
    </div>
</form>
