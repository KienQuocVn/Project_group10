@page
@model OnDemandTutor.API.Pages.Slots.UpdateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update Slot";
}

<h2>Update Slot</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <!-- Hiển thị lỗi nếu có -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Hiển thị SlotId (ẩn hoặc chỉ đọc, nhưng vẫn gửi giá trị khi form được submit) -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Slot ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SlotId" value="@Model.SlotId" readonly />
        </div>
    </div>

    <!-- Class ID Field -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Class ID</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SlotData.ClassId" required />
            <span asp-validation-for="SlotData.ClassId" class="text-danger"></span>
        </div>
    </div>

    <!-- Day of Slot Field -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Day of Slot</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="SlotData.DayOfSlot" required />
            <span asp-validation-for="SlotData.DayOfSlot" class="text-danger"></span>
        </div>
    </div>

    <!-- Start Time Field -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Start Time</label>
        <div class="col-md-8">
            <input type="time" class="form-control" asp-for="SlotData.StartTime" required />
            <span asp-validation-for="SlotData.StartTime" class="text-danger"></span>
        </div>
    </div>

    <!-- End Time Field -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">End Time</label>
        <div class="col-md-8">
            <input type="time" class="form-control" asp-for="SlotData.EndTime" required />
            <span asp-validation-for="SlotData.EndTime" class="text-danger"></span>
        </div>
    </div>

    <!-- Price Field -->
    <div class="row mb-3">
        <label class="col-md-4 col-form-label">Price</label>
        <div class="col-md-8">
            <input type="number" step="0.01" class="form-control" asp-for="SlotData.Price" required />
            <span asp-validation-for="SlotData.Price" class="text-danger"></span>
        </div>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="row">
        <div class="offset-md-4 col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Update Slot</button>
        </div>
        <a class="btn btn-outline-primary" asp-page="/Slots/Index">Cancel</a>
    </div>
</form>

<!-- Display updated values after form submission -->
@if (Model.SlotData != null)
{
    <h3>Updated Slot Data:</h3>
    <ul>
        <li><strong>Slot ID:</strong> @Model.SlotId</li>
        <li><strong>Class ID:</strong> @Model.SlotData.ClassId</li>
        <li><strong>Day of Slot:</strong> @Model.SlotData.DayOfSlot</li>
        <li><strong>Start Time:</strong> @Model.SlotData.StartTime</li>
        <li><strong>End Time:</strong> @Model.SlotData.EndTime</li>
        <li><strong>Price:</strong> @Model.SlotData.Price</li>
    </ul>
}
