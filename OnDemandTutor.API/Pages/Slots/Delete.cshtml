@page
@model OnDemandTutor.API.Pages.Slots.DeleteModel
@{
    ViewData["Title"] = "Delete Slot";
}

<h2>Delete Slot</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="slotId">Slot ID</label>
        <input type="text" class="form-control" id="slotId" name="slotId" value="@Model.SlotId" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="/Slots/Index" class="btn btn-secondary">Back to Slot List</a>
